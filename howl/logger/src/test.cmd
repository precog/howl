@echo off

set JUNIT_HOME=c:\java\junit3.8.1

set java_opts=-cp bin;%EMMA_HOME%\lib\emma.jar;%JUNIT_HOME%\bin
set java_opts=%java_opts% -showversion -Xnoclassgc -ea -esa

:: number of transactions generated by each thread
:: each tx produces two messages, commit and done
set java_opts=%java_opts% -Dxa.msg.count=100

:: message size for the commit record.
:: the done record is much smaller because it includes
:: only the token referring back to the commit
set java_opts=%java_opts% -Dxa.msg.size=80

:: number of worker threads
set java_opts=%java_opts% -Dxa.workers=200

:: specify buffer size in number of 1024 byte blocks
set java_opts=%java_opts% -Dhowl.log.test.setautomark=true
set java_opts=%java_opts% -Dhowl.log.test.timeStamp=false

:: set class=org.objectweb.howl.test.LogTest
:: set class=org.objectweb.howl.test.XALoggerTest
set class=org.objectweb.howl.test.ConfigurationTest

setlocal
set JAVA_HOME=C:\java\j2sdk1.4.2_05
set mode=1.4

if "%1"=="tiger" (
set JAVA_HOME=C:\java\jdk1.5.0
set mode=1.5
)

:: JRockit options that may be valuable
:: -Xmanagement 
:: -Djrockit.lockprofiling -XXjra:delay=10,recordingtime=30

if "%1"=="jrockit" (
set JAVA_HOME=C:\java\jrockit-j2sdk1.4.2_04
set mode=1.4
set PATH=%java_home%\bin;%path%
set java_opts=%java_opts% -Djrockit.lockprofiling -XXjra:delay=10,recordingtime=30
)

if "%1"=="ibm" (
set JAVA_HOME=C:\java\IBM\Java141\jre
set mode=1.4
set PATH=%java_home%\jre\bin;%path%
)

set emma=
if "%1"=="emma" (
set emma=emmarun -r html -sp ./src/java -cp bin;%junit_home%/bin
)

pushd ..
echo on
for %%a in (ConfigurationTest XALoggerTest) do (
%java_home%\bin\java %java_opts% %emma% junit.textui.TestRunner org.objectweb.howl.test.%%a
)
popd
